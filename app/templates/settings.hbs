<Header @currentPage="Settings" />

<section>
  <h4>Color Scheme</h4>
  <label>
    <select
      onchange={{action (mut model.settings.appColorScheme) value="target.value"}}
      value={{model.settings.appColorScheme}}
    >
      <option value="light" selected={{eq "light" model.settings.appColorScheme}}>Light</option>
      <option value="dark" selected={{eq "dark" model.settings.appColorScheme}}>Dark</option>
    </select>
  </label>
</section>

<section>
  <h4>Reset Data</h4>
  <button {{action model.reset}}>Reset</button>
</section>